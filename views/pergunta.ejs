<%- include ('partials/header.ejs'); %>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <h1><%= pergunta.titulo%></h1>
        <p><%= pergunta.descricao%></p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Digite a sua resposta</h3>
            <label for="">resposta:</label>
            <textarea name="corpo" placeholder="Digite a sua resposta" class="form-control" id="" cols="30" rows="10"></textarea>
            <br>
            <input  type="hidden" name="pergunta" value="<%=pergunta.id%>">
            <button class="btn btn-primary" type="submit">Responder</button>
        </form>
        <hr>    
        <h3>Respostas</h3>
        <hr>
        <% resposta.forEach((resposta)=>{  %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%=resposta.corpo%></p>
                </div>
            </div>
        <% }) %>
    </div>

</body>
<% include ('partials/footer.ejs') %>